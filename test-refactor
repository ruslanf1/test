<?php

interface iCart
{
    public function calcVat();

    public function notify();

    public function makeOrder($discount);
}

class Cart implements iCart
{
    public $items;
    public $order;

    public function calcVat()
    {
        return $this->calc(0.18);
    }

    public function notify()
    {
        $p = $this->calc();
        $this->sendMail($p);
    }

    public function makeOrder($discount = 1.0)
    {
        $p = $this->calc() * $discount;
        $this->order = new Order($this->items, $p);
        $this->notify();
    }

    public function sendMail($p)
    {
        $ms = "<p> <b>" . $this->order->id() . "</b> " . $p . " .</p>";

        $m = new SimpleMailer('cartuser', 'j049lj-01');
        $m->sendToManagers($ms);
    }

    public function calc($value = 1.18)
    {
        $result = 0;
        foreach ($this->items as $item) {
            $result += $item->getPrice() * $value;
        }
        return $result;
    }
}
